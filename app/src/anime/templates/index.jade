div
	// .table-striped is just ... not noticeable on my screen
	table#animes.table
		thead: tr
			th Anime name
			th Last ep seen
		tbody
			tr(ng-repeat="anime in animes | orderBy:'-ep'")
				td.anime-name {{anime.name}} 
				td: b {{anime.ep}}
				td: span(ng-click="changeEp(anime, 1)") [+]
				td: span(ng-click="changeEp(anime, -1)", ng-hide="anime.ep == 0") [-]
				td: span.delete-button(ng-click="removeAnime(anime)")= ' [x]'


	a(href="", ng-click="formMode = true", ng-hide="formMode") Add anime
	form(ng-submit="addAnime()", ng-show="formMode")
		input(ng-model="newAnime.name", placeholder="new anime name")
		input(ng-model="newAnime.ep", placeholder="ep", size="1")
		input(type="submit", value="Add!")